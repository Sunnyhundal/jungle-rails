<h1>✍️ Sign up! </h1>

<%# collect basic information about user to create their account %>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
<%= form_for :user, url: '/users' do |f| %>


<div class="form-group">
<%= f.label :first_name %>
<%= f.text_field :first_name, class: 'form-control'  %><br>
</div>

<div class="form-group">
<%= f.label :last_name %>
<%= f.text_field :last_name, class: 'form-control'  %><br>
</div>

<div class="form-group">
<%= f.label :email %>
<%= f.email_field :email, class: 'form-control'  %><br>
</div>

<div class="form-group">
<%= f.label :password %>
<%= f.password_field :password, class: 'form-control'  %><br>
</div>

<div class="form-group">
<%= f.label :Password_Confirmation %>
<%= f.password_field :password_confirmation, class: 'form-control'  %><br>
</div>


<%= f.submit "Submit"%>

<% end %>

</div>
</div>